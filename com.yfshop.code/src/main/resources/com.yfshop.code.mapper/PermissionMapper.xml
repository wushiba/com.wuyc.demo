<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yfshop.code.mapper.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yfshop.code.model.Permission">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="pid" property="pid"/>
        <result column="permission_alias" property="permissionAlias"/>
        <result column="permission_name" property="permissionName"/>
        <result column="role_alias" property="roleAlias"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, create_time, pid, permission_alias, permission_name, role_alias
    </sql>
    <sql id="table_name">
        yf_permission
    </sql>

    <select id="findByAlias" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="table_name"/>
        where permission_alias = #{alias}
    </select>
    <select id="findByAliases" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="table_name"/>
        <where>
            <choose>
                <when test="list != null and !list.empty">
                    permission_alias in
                    <foreach collection="list" index="index" item="alias" open="(" separator="," close=")">
                        #{alias}
                    </foreach>
                </when>
                <otherwise>
                    false
                </otherwise>
            </choose>
        </where>
    </select>

</mapper>
